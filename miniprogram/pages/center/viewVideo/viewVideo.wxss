}
.wrap {
  margin: 20rpx auto;
}
.video1 {
  margin: 30rpx auto;
  background-color: rgba(255, 255, 255, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  font-family: Arial;
  width: 616rpx;
  height: 162rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(169, 169, 169, 0.4);
