/* miniprogram/pages/home/wrongAll/wrongAll.wxss */
page {
  background: white;
}
scroll-view{
  background-color: rgba(255, 255, 255, 1);
}
.menu {
  width: 64rpx;
  height: 64rpx;
  font-size: 62rpx;
  float: right;
  line-height: 62rpx;
}
.bank-wrap {
  background: white;
  padding-bottom: 8vh;
}
.bank-title {
  margin-left: 34rpx;
  height: 10vh;
  color: rgba(16, 16, 16, 1);
  font-size: 50rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.score-time {
  display: inline-block;
  margin-left: 34rpx;
  margin-top: 65rpx;
  margin-bottom: 30rpx;
  height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.line {
  /* position: absolute; */
  width: 750rpx;
  border: 1rpx solid rgba(187, 187, 187, 1);
}
.bank {
  margin-left: 34rpx;
  padding-top: 45rpx;
  overflow: auto;
  height: 50vh;
}
.radio-question,
.checkbox-question,
.blank-question,
.sort-question {
  display: flex;
  flex-direction: column;
  color: rgba(16, 16, 16, 1);
  font-size: 30rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  margin-bottom: 15rpx;
}

.my-choosebox {
  display: block;
}
.my-choosebox text {
  margin-left: 20rpx;
}

.my-choosebox radio {
  transform: scale(0.6);
  border-radius: 50%;
  border: 4rpx solid transparent;
  background: transparent;
}
.my-choosebox .no-radio {
  border: 4rpx solid rgba(250, 191, 1, 1);
}
 .my-choosebox checkbox {
  transform: scale(0.6);
  border: 4rpx solid rgba(250, 191, 1, 1);
  background: transparent;
}
.my-choosebox .no-checkbox {
  border: 4rpx solid rgba(250, 191, 1, 1);
}
radio .wx-radio-input.wx-radio-input-disabled {
  background: white;
}
checkbox .wx-checkbox-input.wx-checkbox-input-disabled {
  background: white;
}
radio.red {
  border: 4rpx solid red !important;
}
checkbox.red {
  border: 4rpx solid red !important;
}
.yourblank {
  font-size: 36rpx;
  margin-top: 28rpx;
  font-family: PingFangSC-regular;
}
.blank-question input, .sort-question input {
  width: 690rpx;
  height: 72rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: -apple-system;
  border: 1rpx solid rgba(187, 187, 187, 1);
  padding-left: 1em;
  margin-top: 10rpx;
}

.correct-analyse {
  margin-top: 30rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.comments {
  padding: 30rpx;
  padding-bottom: 0;
}
.comment {
  position: relative;
}
.comment .user {
  display: flex;
  justify-content: space-between;
}
.like-dot, .user-info {
  display: flex;
}
.user-info .user-name {
  margin-left: 26rpx;
  line-height: 60rpx;
}
.like-dot {
  margin-right: 20rpx;
}
.like-dot .dot-num {
  line-height: 55rpx;
}

.comment .mine {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
}
.comment .like {
  font-size: 43rpx;
  padding-right: 10rpx;
}
.comment .content {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  padding: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  word-break: break-all;
  color: #aaa;
  padding-left: 83rpx;
  padding-top: 0;
}
.comment .createtime {
  padding-left: 83rpx;
  color: #ccc;
}

.replay .replay-info {
  padding-left: 20rpx;
  padding-top: 30rpx;
  font-size: 25rpx;
}
.replay .replay-info .replay-name {
  color: rgba(16, 16, 16, 1);
  font-family: SourceHanSansSC-regular;
}

.view-all {
  height: 60rpx;
  color: rgba(163, 163, 163, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: PingFangSC-regular;
  text-decoration: underline;
  margin-top: 10rpx;
}
.publish {
  position: relative;
}
.publish input {
  position: absolute;
  left: 19rpx;
  padding-right: 193rpx;
  padding-left: 1em;
  width: 688rpx;
  height: 76rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFang SC;
  border: 2rpx solid rgba(187, 187, 187, 1);
}
.publish .publish-comment {
  position: absolute;
  left: 530rpx;
  top: 6rpx;
  width: 150rpx;
  height: 62rpx;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 255, 1);
  color: rgba(163, 163, 163, 1);
  font-size: 36rpx;
  text-align: center;
  font-family: PingFang SC;
  border: 4rpx solid rgba(163, 163, 163, 1);
}
.next-size {
  position: relative;
  background: white;
  height: 11vh
}
.chekckout-question {
  width: 164rpx;
  height: 72rpx;
  border-radius: 20rpx;
  background-color: rgba(250, 191, 1, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  text-align: center;
  font-family: PingFang SC;
  border: 4rpx solid rgba(0, 0, 0, 1);
  line-height: 72rpx;
}
.next-question {
  float: right;
  margin-right: 40rpx;
}
.pre-question {
  float: left;
  margin-left: 40rpx;
}
.page-size {
  margin: 0 auto;
  width: 60rpx;
  height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  padding-top: 100rpx;
}

.wrong-blank {
  color: red;
}
.correct-blank {
  color: yellow;
}
.cu-btn {
  position: relative;
  left: -24%;
}
.question-index-wrap {
  display: flex;
  padding: 80rpx;
  flex-wrap: wrap;
  justify-content: space-around;
  background: white;
  padding-top: 40rpx;
}
.cu-dialog {
  border-radius: 11px;
  box-shadow: 0px 1px 4px 0px rgba(250, 191, 1, 0.47);
  border: 2px solid rgba(250, 191, 1, 1);
}
.cu-dialog .cubar {
  padding-top: 30rpx;
}

.question-index-wrap .question-index {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: rgba(255, 255, 255, 0);
  font-size: 36rpx;
  text-align: center;
  font-family: -apple-system;
  border-radius: 50% 50%;
  margin: 10rpx;
  border: 2rpx solid black;
}
.question-index-wrap .correct {
  border: 2rpx solid rgba(250, 191, 1, 1);
  color: rgba(250, 191, 1, 1);
}
.question-index-wrap .wrong {
  border: 2rpx solid red;
  color: rgb(250, 1, 1);
}