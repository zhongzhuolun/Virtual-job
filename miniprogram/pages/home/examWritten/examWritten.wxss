scroll-view {
  background: white;
}
.bank-wrap {
  background: white;
  padding-bottom: 200rpx;
}
.bank-title {
  margin-left: 34rpx;
  padding-top: 42rpx;
  width: 676rpx;
  height: 160rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 56rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.score-time {
  margin-left: 34rpx;
  margin-top: 65rpx;
  margin-bottom: 30rpx;
  height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.line {
  /* position: absolute; */
  width: 750rpx;
  border: 1rpx solid rgba(187, 187, 187, 1);
}
.bank {
  margin-left: 34rpx;
  padding-top: 45rpx;
}
.radio-question,
.checkbox-question,
.blank-question,
.sort-question {
  display: flex;
  flex-direction: column;
  color: rgba(16, 16, 16, 1);
  font-size: 30rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  margin-bottom: 15rpx;
}

.my-choosebox {
  display: block;
}
.my-choosebox text {
  margin-left: 20rpx;
}
.my-choosebox radio{
  transform: scale(0.6);
  border-radius: 50%;
  border: 4rpx solid #ffc200;
  /* border: 4rpx solid transparent; */
  background: transparent;
}
.my-choosebox radio.checked {
  border: 4rpx solid transparent;
}
 .my-choosebox checkbox{
  transform: scale(0.6);
  border: 4rpx solid #ffc200;
  background: transparent;
}
.blank-question input, .sort-question input {
  width: 690rpx;
  height: 72rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: -apple-system;
  border: 1rpx solid rgba(187, 187, 187, 1);
  padding-left: 1em;
  margin-top: 10rpx;
}
.submit {
  position: relative;
  left: 254rpx;
  width: 242rpx;
  height: 70rpx;
  line-height: 64rpx;
  border-radius: 20rpx;
  background-color: rgba(250, 191, 1, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  text-align: center;
  font-family: PingFang SC;
  border: 4rpx solid rgba(0, 0, 0, 1);
  /* margin: 100rpx 0 200rpx; */
  transform: translate3d(0, 100%, 0);
}
.timer {
  position: fixed;
  left: 550rpx;
  bottom: 40rpx;
  width: 168rpx;
  height: 70rpx;
  line-height: 64rpx;
  border-radius: 52rpx;
  color: rgba(250, 191, 1, 1);
  font-size: 36rpx;
  text-align: center;
  box-shadow: 0rpx 4rpx 4rpx 0rpx rgba(0, 0, 0, 0.24);
  font-family: -apple-system;
  border: 4rpx solid rgba(250, 191, 1, 1);
}
.bg-sbumit {
  background: rgba(250, 191, 1, 1);
  position: absolute;
  height: 100vh;
  width: 100vw;
  z-index: 100;
  top: 0;
  left: 0;
}
.detail {
  position: absolute;
  left: 66rpx;
  top: 314rpx;
  width: 616rpx;
  height: 430rpx;
  line-height: 52rpx;
  border-radius: 50rpx;
  background-color: rgba(255, 255, 255, 0.47);
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  text-align: center;
  box-shadow: 0rpx 8rpx 18rpx 0rpx rgba(178, 178, 178, 0.4);
  font-family: -apple-system;
  border: 1rpx solid rgba(255, 255, 255, 0);
  padding: 120rpx;
  line-height: 64rpx;
}
.show {
  display: block;
  visibility: visible;
}
.hide {
  display: none;
  visibility: hidden;
  height: 100vh;
  overflow: hidden;
}

.my-btn {
  position: absolute;
  width: 246rpx;
  height: 94rpx;
  top: 796rpx;
  line-height: 90rpx;
  border-radius: 20rpx;
  background-color: rgba(250, 191, 1, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  text-align: center;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.33);
  font-family: PingFang SC;
  border: 4rpx solid rgba(0, 0, 0, 1);
}
