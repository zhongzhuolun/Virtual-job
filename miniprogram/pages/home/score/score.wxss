.btn-wrap {
  margin: 0 auto;
  overflow: hidden;
  width: 80vw;
  padding: 20rpx;
}
.btn-wrap button {
  width: 264rpx;
  height: 76rpx;
  border-radius: 20rpx;
  background-color: rgba(250, 191, 1, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  text-align: center;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.33);
  font-family: Microsoft Yahei;
  border: 2rpx solid rgba(0, 0, 0, 1);
  line-height: 70rpx;
  float: left;

}
.button1 {
  margin: 0 14rpx;
}

.score {
  height: 190rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 200rpx;
  text-align: center;
  font-family: "方正汉真广标-标准";
}
.wrap {
  position: relative;
  /* width: 616rpx; */
  width: 655rpx;
  line-height: 40rpx;
  border-radius: 50rpx;
  background-color: rgba(255, 255, 255, 0.51);
  text-align: center;
  box-shadow: 0rpx 8rpx 18rpx 0rpx rgba(178, 178, 178, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 0);
  margin: 100rpx auto;
  /* padding: 24rpx; */
  padding: 30rpx;
}
.title {
  color: rgba(16, 16, 16, 1);
  font-size: 56rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  line-height: 70rpx;
  word-break: break-all;
}
.data {
  /* width: 89%; */
  width: 99%;
	/* margin: 40rpx auto; */
	margin: 60rpx auto;
	border: 4rpx solid black;
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: center;
  font-family: PingFang SC;
  line-height: 78rpx;
}
.data text {
	font-size: 36rpx;
}
.data .row {
  border-top: 4rpx solid black;
  /* 需同步更改 */
  height: 8vh; 
}
.data .row:nth-child(1) {
	border-top: none;
}
.data .column {
	display: inline-block;
  width: 50%;
  /* 需同步更改 */
  height: 100%;
  line-height: 8vh; 
}
.data .column:nth-child(1) {
	border-right: 4rpx solid black;
}
.data .column text:nth-child(2) {
  text-align: center;
  display: inline-block;
}
.time {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}